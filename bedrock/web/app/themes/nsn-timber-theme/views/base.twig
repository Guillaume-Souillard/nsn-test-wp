<!DOCTYPE html>
<html class="h-full" {{ site.language_attributes }}>
    <head>
        <meta charset="{{ site.charset }}" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {{ function('wp_head') }}
    </head>
    <body class="h-full bg-gray-100">
        <header>
            {% include 'menu.twig' %}
        </header>

        <main class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
            {% block content %}
                <!-- Le contenu sera injecté ici -->
            {% endblock %}
        </main>

        <footer class="bg-white mt-12">
            <div class="max-w-7xl mx-auto py-12 px-4 sm:px-6 lg:px-8">
                <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
                    <div>
                        <h3 class="text-sm font-semibold text-gray-600 tracking-wider uppercase mb-4">
                            À propos
                        </h3>
                        <p class="text-base text-gray-500">
                            {{ site.description }}
                        </p>
                    </div>
                    
                    <div>
                        <h3 class="text-sm font-semibold text-gray-600 tracking-wider uppercase mb-4">
                            Navigation
                        </h3>
                        <ul class="space-y-4">
                            {% for item in footer_menu.items %}
                                <li>
                                    <a href="{{ item.link }}" class="text-base text-gray-500 hover:text-gray-900">
                                        {{ item.title }}
                                    </a>
                                </li>
                            {% endfor %}
                        </ul>
                    </div>

                    <div>
                        <h3 class="text-sm font-semibold text-gray-600 tracking-wider uppercase mb-4">
                            Contact
                        </h3>
                        <ul class="space-y-4">
                            <li class="text-gray-600">
                                869 Av. de la République, 59700 Marcq-en-Barœul, France
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="mt-8 pt-8 border-t border-gray-200">
                    <p class="text-base text-gray-400 text-center">
                        © {{ "now"|date('Y') }} {{ site.title }}. Tous droits réservés.
                    </p>
                </div>
            </div>
        </footer>

        {{ function('wp_footer') }}
    </body>
</html> 