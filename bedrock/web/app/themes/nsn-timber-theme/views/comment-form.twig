<div class="bg-white shadow-lg rounded-xl p-6 border border-gray-200 max-w-2xl mx-auto">
    <h3 class="text-2xl font-semibold text-gray-900 mb-4">Add comment</h3>
    <form class="space-y-4" method="post" action="{{ site.site_url~'/wp-comments-post.php' }}">

        {% if user %}
            <input type="hidden" name="email" value="{{ user.email }}">
            <input type="hidden" name="author" value="{{ user.name }}">
            <input type="hidden" name="url" value="{{ user.link }}">
        {% else %}
            <div>
                <label for="email" class="block text-gray-700 font-medium">Email</label>
                <input required name="email" type="email" id="email" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
            </div>

            <div>
                <label class="block text-gray-700 font-medium">Name</label>
                <input required name="author" type="text" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
            </div>

            <div>
                <label class="block text-gray-700 font-medium">Website</label>
                <input name="url" type="url" class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none">
            </div>
        {% endif %}

        <div>
            <label class="block text-gray-700 font-medium">Comment</label>
            <textarea placeholder="Leave a comment..." name="comment" cols="60" rows="3"
                      class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:outline-none"></textarea>
        </div>

        <input name="comment_post_ID" value="{{ post.id }}" type="hidden">
        <input name="comment_parent" value="{{ comment.ID|default('0') }}" type="hidden">

        <div class="flex items-center space-x-4">
            <button type="submit" name="Submit" class="bg-blue-600 text-white px-5 py-2 rounded-lg font-medium hover:bg-blue-700 transition-all">
                Send
            </button>
            <button type="reset" class="bg-gray-400 text-white px-5 py-2 rounded-lg font-medium hover:bg-gray-500 transition-all">
                Cancel
            </button>
        </div>

        <p class="text-gray-600 text-sm mt-4">Your comment will be revised by the site if needed.</p>
    </form>
</div>
