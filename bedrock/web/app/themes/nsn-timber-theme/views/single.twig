{% extends "base.twig" %}

{% block content %}
	<article class="bg-white rounded-lg shadow-sm p-6">
		{% if post.thumbnail %}
			<div class="mb-6 -mx-6 -mt-6">
				<img
						src="{{ post.thumbnail.src }}"
						class="w-full h-64 object-cover"
						alt="{{ post.thumbnail.alt }}"
				>
			</div>
		{% endif %}

		<header class="mb-8">
			<h1 class="text-4xl font-bold text-gray-900 mb-4">{{ post.title }}</h1>
			<div class="flex items-center text-gray-600 text-sm">
				<time datetime="{{ post.date('Y-m-d') }}" class="mr-4">
					{{ post.date }}
				</time>
				{% if post.author %}
					<span class="mr-4">Par {{ post.author.name }}</span>
				{% endif %}
				{% if post.categories %}
					<div class="flex gap-2">
						{% for category in post.categories %}
							<a href="{{ category.link }}" class="bg-gray-100 px-2 py-1 rounded-full hover:bg-gray-200">
								{{ category.name }}
							</a>
						{% endfor %}
					</div>
				{% endif %}
			</div>
		</header>

		<div class="prose max-w-none">
			{{ post.content }}
		</div>

		{% if post.tags %}
			<div class="mt-8 pt-6 border-t border-gray-200">
				<h3 class="text-sm font-semibold text-gray-600 mb-3">Tags :</h3>
				<div class="flex flex-wrap gap-2">
					{% for tag in post.tags %}
						<a href="{{ tag.link }}" class="bg-blue-100 text-blue-700 px-3 py-1 rounded-full text-sm hover:bg-blue-200">
							{{ tag.name }}
						</a>
					{% endfor %}
				</div>
			</div>
		{% endif %}
	</article>

	{% if sidebar %}
		<aside class="mt-8 bg-white rounded-lg shadow-sm p-6">
			{{ sidebar }}
		</aside>
	{% endif %}
{% endblock %}